# Puerto del servidor (será asignado automáticamente en producción)
PORT=3000

# Configuración de red Stellar
STELLAR_NETWORK=TESTNET
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org

# Modo de desarrollo (local vs producción)
NODE_ENV=development

# Configuración de compilación de contratos
ENABLE_CONTRACT_COMPILATION=true
RUST_TOOLCHAIN_PATH=/usr/local/bin

# Configuración de logging
LOG_LEVEL=info
